{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client" ,
            "image": "peterboot/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image":"peterboot/multi-server",
            "hostname": "api",
            "essential":false
        },
        {
            "name": "worker",
            "image": "peterboot/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image":"peterboot/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                 "hostPort": 80,
                 "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}